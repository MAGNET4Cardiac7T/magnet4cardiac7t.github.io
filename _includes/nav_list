                {% endif %}

                {% if forloop.last %}
                    <li id="blog_more_link"><a href='#' style='cursor: pointer'>Show More</a></li>
                {% endif %}
              {% endif %}

             {% if showMore == 'false' %}
                <li><a href="{{ child.url | relative_url }}"{% if child.url == page.url %} class="active"{% endif %}>{{ child.title }}</a></li>
             {% endif %}

            {% endfor %}
          </ul>
          {% endif %}
